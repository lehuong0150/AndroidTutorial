            <include layout="@layout/item_song_demo" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:gravity="center"
                android:text="INLINE Banner "
                android:textColor="#388E3C"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <com.eco.musicplayer.audioplayer.music.ads.banner.admob.CustomBanner
                android:id="@+id/banner_inline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_12sdp"
                android:background="@drawable/bg_ad" />

            <include layout="@layout/item_song_demo" />

            <include layout="@layout/item_song_demo" />

            <include layout="@layout/item_song_demo" />

            <include layout="@layout/item_song_demo" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

    <com.eco.musicplayer.audioplayer.music.ads.banner.admob.CustomBanner
        android:id="@+id/banner_collapsible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/bg_ad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollContent" />

</androidx.constraintlayout.widget.ConstraintLayout>