<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".layout.LayoutActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/layoutHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/imgAvatar"
                android:text="@string/user_name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:id="@+id/imgCart"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/description_ic_cart"
                    android:padding="8dp"
                    android:src="@drawable/ic_grocery_cart" />

                <TextView
                    android:id="@+id/tvBadge"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="end|top"
                    android:background="@drawable/bg_badge_red"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="11sp" />
            </FrameLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/bg_search_box"
            android:orientation="horizontal"
            android:padding="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutHeader">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/description_ic_search"
                android:src="@drawable/ic_search" />

            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/search"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:textSize="18sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/gray" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/description_ic_filter"
                android:src="@drawable/ic_filter_list" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/filterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llSearch">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_filter"
                android:padding="6dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/imgIconNew"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_new"
                    android:contentDescription="@string/description_ic_new" />

                <Spinner
                    android:id="@+id/spNewest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:background="@null"
                    android:entries="@array/newest_filter_options" />

            </LinearLayout>

            <View
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_filter"
                android:padding="6dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/imgIconPrice"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_filter_price"
                    android:contentDescription="@string/description_ic_new" />

                <Spinner
                    android:id="@+id/spPrice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:background="@null"
                    android:entries="@array/price_filter_options" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtHeaderCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/category"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/filterLayout" />

        <ScrollView
            android:id="@+id/layoutCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtHeaderCategory">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:alignmentMode="alignMargins"
                android:background="@drawable/bg_category"
                android:columnCount="3"
                android:columnOrderPreserved="false"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/linearLayoutItem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgCategory1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/img_category_burger" />

                    <TextView
                        android:id="@+id/txtNameCategory1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/category_burger"
                        android:textAlignment="center"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutItem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgCategory2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/img_category_pizza" />

                    <TextView
                        android:id="@+id/txtNameCategory2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/category_pizza"
                        android:textAlignment="center"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutItem3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgCategory3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/img_category_drink" />

                    <TextView
                        android:id="@+id/txtNameCategory3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/category_drink"
                        android:textAlignment="center"
                        android:textSize="18sp" />
                </LinearLayout>

            </GridLayout>
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:background="@color/line_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutCategory"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutCategory">

            <LinearLayout
                android:id="@+id/layoutHeaderProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="@string/product"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/btnSeeAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="bottom"
                    android:text="@string/all_in"
                    android:textSize="15sp" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutHeaderProduct">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <GridLayout
                            android:id="@+id/layoutProduct1"
                            android:layout_width="150dp"
                            android:layout_height="190dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/bg_item_product"
                            android:elevation="5dp"
                            android:rowCount="3"
                            android:columnCount="2"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/imgProduct1"
                                android:layout_width="80dp"
                                android:layout_height="75dp"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:layout_columnSpan="2"
                                android:layout_gravity="center_vertical|center"
                                android:layout_marginBottom="10dp"
                                android:contentDescription="@string/item_name_product1"
                                android:src="@drawable/img_item_product1" />

                            <TextView
                                android:id="@+id/txtNameProduct1"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_row="1"
                                android:layout_column="0"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10dp"
                                android:padding="2dp"
                                android:text="@string/item_name_product1"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_row="1"
                                android:layout_column="1"
                                android:layout_rowSpan="2"
                                android:layout_gravity="right|center_vertical"
                                android:background="@drawable/ic_add_product" />

                            <TextView
                                android:id="@+id/txtPriceProduct1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="2"
                                android:layout_column="0"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="6dp"
                                android:text="@string/item_price_product1"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </GridLayout>
                        <GridLayout
                            android:id="@+id/layoutProduct2"
                            android:layout_width="150dp"
                            android:layout_height="190dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="30dp"
                            android:background="@drawable/bg_item_product"
                            android:elevation="5dp"
                            android:rowCount="3"
                            android:columnCount="2"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/imgProduct2"
                                android:layout_width="80dp"
                                android:layout_height="75dp"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:layout_columnSpan="2"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp"
                                android:contentDescription="@string/item_name_product2"
                                android:src="@drawable/img_item_product2" />

                            <TextView
                                android:id="@+id/txtNameProduct2"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_row="1"
                                android:layout_column="0"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10dp"
                                android:padding="2dp"
                                android:text="@string/item_name_product2"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnAddProduct2"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_row="1"
                                android:layout_column="1"
                                android:layout_rowSpan="2"
                                android:layout_gravity="right|center_vertical"
                                android:background="@drawable/ic_add_product" />

                            <TextView
                                android:id="@+id/txtPriceProduct2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="2"
                                android:layout_column="0"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="6dp"
                                android:text="@string/item_price_product2"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </GridLayout>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                        <GridLayout
                            android:id="@+id/layoutProduct3"
                            android:layout_width="150dp"
                            android:layout_height="190dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/bg_item_product"
                            android:elevation="5dp"
                            android:rowCount="3"
                            android:columnCount="2"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/imgProduct3"
                                android:layout_width="80dp"
                                android:layout_height="75dp"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:layout_columnSpan="2"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp"
                                android:contentDescription="@string/item_name_product3"
                                android:src="@drawable/img_item_product3" />

                            <TextView
                                android:id="@+id/txtNameProduct3"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_row="1"
                                android:layout_column="0"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10dp"
                                android:padding="2dp"
                                android:text="@string/item_name_product3"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnAddProduct3"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_row="1"
                                android:layout_column="1"
                                android:layout_rowSpan="2"
                                android:layout_gravity="right|center_vertical"
                                android:background="@drawable/ic_add_product" />

                            <TextView
                                android:id="@+id/txtPriceProduct3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="2"
                                android:layout_column="0"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="6dp"
                                android:text="@string/item_price_product3"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </GridLayout>
                        <GridLayout
                            android:id="@+id/layoutProduct4"
                            android:layout_width="150dp"
                            android:layout_height="190dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="30dp"
                            android:background="@drawable/bg_item_product"
                            android:elevation="5dp"
                            android:rowCount="3"
                            android:columnCount="2"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/imgProduct4"
                                android:layout_width="80dp"
                                android:layout_height="75dp"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:layout_columnSpan="2"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp"
                                android:contentDescription="@string/item_name_product4"
                                android:src="@drawable/img_item_product4" />

                            <TextView
                                android:id="@+id/txtNameProduct4"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_row="1"
                                android:layout_column="0"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10dp"
                                android:padding="2dp"
                                android:text="@string/item_name_product4"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnAddProduct4"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_row="1"
                                android:layout_column="1"
                                android:layout_rowSpan="2"
                                android:layout_gravity="right|center_vertical"
                                android:background="@drawable/ic_add_product" />

                            <TextView
                                android:id="@+id/txtPriceProduct4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="2"
                                android:layout_column="0"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="6dp"
                                android:text="@string/item_price_product4"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </GridLayout>
                    </TableRow>
                </TableLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>